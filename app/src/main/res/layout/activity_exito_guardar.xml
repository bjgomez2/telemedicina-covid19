<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    android:orientation="vertical"
    tools:context=".activities.ExitoGuardarActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/lblExito"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/ic_finish"
                android:gravity="center" />

            <TextView
                android:id="@+id/lblTitulo"
                android:layout_width="wrap_content"
                android:layout_height="49dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/poppins_bold"
                android:gravity="center"
                android:text="Datos guardados con Ã©xito"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/lblMensaje"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/poppins"
                android:gravity="center"
                android:text="Mensaje"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/lblMensajeSub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/poppins_light"
                android:gravity="center"
                android:text="Mensaje"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <Button
                android:id="@+id/btnInformacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/round_bg_white"
                android:fontFamily="@font/poppins_bold"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:text="@string/m_s_informaci_n_sobre_el_covid_19"
                android:textColor="@color/colorAccent" />


            <Button
                android:id="@+id/btnSalir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/round_bg_red"
                android:fontFamily="@font/poppins_bold"
                android:paddingStart="70dp"
                android:paddingEnd="70dp"
                android:text="@string/salir"
                android:textColor="@color/white" />


        </LinearLayout>
    </ScrollView>


</LinearLayout>